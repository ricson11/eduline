{{>_adm_head}}
              <div class="container my-4">
             <div class="leave-coment-form">
                        <h3 class="courses-title  mb-4">Scholarship Status Message</h3>
                        <form action="/scholarship/email" method="POST">
                      
                          <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control" required="required" value="{{scholar.email}}" id="sch1">
                        </div>
                          <div class="form-group">
                            <label for="subject">Subject</label>
                            <input type="text" name="subject" class="form-control" required="required"
                             value="Congratulations {{scholar.firstName}} {{scholar.lastName}}, you have been selected for 2021 jambite scholarship award." id="sch2">
                        </div>
                        
                           <div class="form-group">
                               <label>Message</label>
                                <textarea name="mailBody" class="form-control" required="required" id="sch3">Hi! {{scholar.firstName}} {{scholar.lastName}}, this is to announced to you that you have been selected for 2021 jambites scholarship award. You will receive a monetary reward from us within the next 48 hours. Once again congratulations</textarea> 
                           </div>
                                   
                             <div class="mm_single_submit">
                                <input type="submit" value="Send Scholarship Message">
                            </div>
                        </form>
                    </div>
                  
                 </div>
              
              <script>

               document.getElementById('sch1').addEventListener('mousedown', function(e){
                   e.preventDefault();
               });   
                document.getElementById('sch2').addEventListener('mousedown', function(e){
                   e.preventDefault();
               });   
                document.getElementById('sch3').addEventListener('mousedown', function(e){
                   e.preventDefault();
               });   

          </script>

  {{>_footer}}               