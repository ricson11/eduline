 <div class="container-flex" id="notebox">
   <h5 class="text-center"></h5>
     {{#if notifications}}
           <p class="text-center mt-2" id="newsi">New signup <i class="fa fa-times" id="tim"></i></p>
           {{/if}}
        {{#each notifications}}
 <div class="container text-center my-3" id="noti">
           
           <p class="">{{username}} <span class="text-danger">{{gender}}</span></p>
           <a href="/user/notification/{{slug}}">more details</a>
           
         </div>   
         {{/each}}
 </div>
 <div class="container-flex" id="notebox1">

     {{#if postings}}
           <p class="text-center mt-2" id="newsi">New post <i class="fa fa-times" id="tim1"></i></p>
           <a href="/deleteAll">delete</a>
           {{/if}}
        {{#each postings}}
 <div class="container text-center my-3" id="noti">
           
           <p class="">{{title}} <span class="text-danger">{{gender}}</span></p>
           <a href="/posting/{{slug}}">more details</a>
           
         </div>   
         {{/each}}
     </div>
      <div class="container-flex" id="notebox2">

     {{#if contacts}}
           <p class="text-center mt-2" id="newsi">New email <i class="fa fa-times" id="tim2"></i></p>
           {{/if}}
        {{#each contacts}}
 <div class="container text-center my-3" id="noti">
           
           <p class="">from {{name}} <span class="text-danger">{{gender}}</span></p>
           <a href="/contact/{{slug}}">more details</a>
           
         </div>   
         {{/each}}
     </div>


